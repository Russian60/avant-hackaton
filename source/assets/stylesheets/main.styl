.main-content {
  padding-left: 83px;
}

.no-sidebar {
  .sidebar-menu {
    display: none;
  }
  .main-content {
    padding-left: 0px;
  }

}

ui-view > div[class*="feature"] {
  padding-top: 80px;
}
