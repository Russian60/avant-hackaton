$navbar-height = 60px;
$navbar-color  = #fff;
$footer-bgc    = #212121;

.product-feature {
  background-color #fafafa!important

  .product-photo {
    text-align center
    img {
      width: 100%;

    }
  }

  .product-info {
    .title {
      font-size: 28px;
      line-height: 39px;
    }

    .desc {
      color:      #424242;
      font-style: italic;
      margin:     10px 0;
    }

    .category {
      text-transform: uppercase;
      font-size:      10px;
      font-style:     italic;
    }

    .price {
      color:     #2e7d32;
      font-size: 25px;
      margin:    15px 0;
    }

    .buy-button {
      width:         100%;
      background:    #2e7d32;
      color:         #fff;
      text-align:    center;
      font-size:     18px;
      line-height:   47px;
      border-radius: 1px;
      margin: 30px 0;
    }
  }
}
